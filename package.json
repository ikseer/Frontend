{
	"name": "frontend-enhancement",
	"private": true,
	"scripts": {
		"web": "pnpm --filter @ikseer/web",
		"turbo:web": "turbo --filter @ikseer/web",
		"build": "pnpm turbo:web build",
		"dev": "pnpm turbo:web dev",
		"lint": "biome lint --diagnostic-level=error --apply .",
		"fix": "biome check --diagnostic-level=error --apply-unsafe .",
		"format": "prettier -w . && biome format --write .",
		"checkall": "turbo checkts && prettier -w . && pnpm fix",
		"checkts": "turbo checkts"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"lefthook": "^1.6.11",
		"prettier": "^3.2.5",
		"turbo": "latest"
	},
	"engines": {
		"node": ">=18"
	},
	"prettier": {
		"useTabs": true
	}
}
